
{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a grocery product available for purchase.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the product."
        },
        "name": {
          "type": "string",
          "description": "Name of the product."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the product."
        },
        "price": {
          "type": "number",
          "description": "Current selling price of the product."
        },
        "originalPrice": {
          "type": "number",
          "description": "The original price before discount (if applicable)."
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement (e.g., Kg, g, Unit, Bunch)."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the product image.",
          "format": "uri"
        },
        "category": {
          "type": "string",
          "description": "Category of the product (e.g., fruits, vegetables, dairy)."
        },
        "inStock": {
          "type": "boolean",
          "description": "Whether the product is currently available for purchase."
        },
        "isDiscounted": {
          "type": "boolean",
          "description": "Whether the product is part of the Discount Corner."
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "price",
        "unit",
        "imageUrl",
        "category",
        "inStock"
      ]
    },
    "StoreSettings": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "StoreSettings",
      "type": "object",
      "description": "General settings for the store appearance.",
      "properties": {
        "heroImageUrl": {
          "type": "string",
          "description": "Base64 or URL of the hero section image."
        },
        "logoImageUrl": {
          "type": "string",
          "description": "Base64 or URL of the store logo."
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of dynamic categories for the store."
        }
      }
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": {
            "$ref": "#/backend/entities/Product"
          },
          "description": "Stores grocery product information.",
          "params": [
            {
              "name": "productId",
              "description": "Unique identifier for the product."
            }
          ]
        }
      },
      {
        "path": "/settings/store",
        "definition": {
          "entityName": "StoreSettings",
          "schema": {
            "$ref": "#/backend/entities/StoreSettings"
          },
          "description": "Global store settings like hero images, logos, and categories.",
          "params": []
        }
      }
    ]
  }
}
