
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Utility function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Grocery products: readable by everyone, writable only by admins
    match /products/{productId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Store settings (hero image, etc.): readable by everyone, writable only by admins
    match /settings/store {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Individual user data (for future features like order history)
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
